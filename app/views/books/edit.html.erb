<h1>Editing Book</h1>
     <% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, local: true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<%= @book.title %>

<h4>body</h4>
<%= f.text_area :body %>
<%= @book.body %>

<%= f.submit'Update Book' %>
<% end %>

<span><%= link_to "show", book_path(@book) %></span>
<span><%= link_to "back", books_path %></span>